<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.resistor.LoginActivity"
    android:orientation="vertical"
    android:id="@+id/loginn"
    android:background="@color/purple_500"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="208dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/logo" />

    <LinearLayout

        android:id="@+id/bandn"
        android:layout_width="355dp"
        android:layout_height="490dp"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.266">

        <TextView
            android:id="@+id/tvdangnhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="ĐĂNG NHẬP"
            android:textStyle="bold"
            android:textColor="#F2F6F2"
            android:textSize="50sp" />

        <EditText
            android:id="@+id/edemaildn"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="0.1"
            android:background="@color/white"
            android:autofillHints="emailAddress"
            android:textSize="20sp"
            android:hint="Email"
            android:textColor="@color/black"
            android:inputType=""
            tools:ignore="TextFields" />

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/edpassworddn"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="0.1"
            android:autofillHints="password"
            android:hint="Password"
            android:background="@color/white"
            android:textSize="20sp"
            android:inputType="textPassword"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btdn"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:layout_weight="0.15"
            android:backgroundTint="#F1EEEE"
            android:text="Đăng nhập"
            android:textSize="18sp"
            android:textColor="@color/purple_700" />

        <TextView
            android:id="@+id/qmk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:clickable="true"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:gravity="right"
            android:text="Quên mật khẩu"
            android:textColor="#FFFCFC" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pgloaddn"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bandn" />
</LinearLayout>